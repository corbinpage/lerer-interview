<div class="container">
  <div class="row-fluid">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

      <form class="form-horizontal">
        <fieldset>
          <legend>Connect with <%= @partner.name %></legend>
          <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label bigger">Your Email</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="inputEmail">
            </div>
          </div>
          <div class="form-group">
            <label for="textArea" class="col-lg-2 control-label bigger">Reason for Connecting</label>
            <div class="col-lg-10">
              <textarea class="form-control" rows="5" id="textArea"></textarea>
              <span class="help-block">Please describe the reason you wish to connect with <%= @partner.name %>, so we can better position you for success.</span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </fieldset>
      </form>

    </div>
  </div>
</div>
